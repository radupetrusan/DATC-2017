@model List<AlbumPhoto.Models.Comment>
    @{
        ViewBag.Title = "ViewComments";
    }

    <h2>ViewComments</h2>


    @if (Model.Count() != 0)
    {
        <div>
            @foreach (var comment in Model)
            {
                <div >
                    
                    
                        <h2> <b> @comment.MadeBy </b> </h2>
                    

                    <div>@comment.Text</div>
                </div>
                <br>
            }
        </div>
    }
    else
    {
        <div >No comments were found for this picture!</div>
    }

