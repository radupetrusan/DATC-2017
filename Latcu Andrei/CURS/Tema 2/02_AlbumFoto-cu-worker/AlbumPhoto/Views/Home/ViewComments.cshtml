@model List<AlbumPhoto.Models.Comment>
    @{
        ViewBag.Title = "ViewComments";
    }
    <h3>Comments</h3>
    @if (Model.Count() != 0)
    {
        <div>
            @foreach (var comment in Model)
            {
                <div >
                        <h3> <b> @comment.MadeBy </b> </h3>

                        <div>@comment.Text</div>

                        <div>---------------</div>
                </div>
                <br>
            }
        </div>
    }
    else
    {
        <div >There are no comments.</div>
    }

